<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workoutactivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-48dp"
        tools:layout_editor_absoluteY="218dp">

        <LinearLayout
            android:id="@+id/ll_main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Workouts"
                android:height="60dp"
                android:gravity="center"
                android:textSize="30sp"
                android:background="@drawable/box"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:id="@+id/TextviewBundleid"
                android:layout_width="71dp"
                android:layout_height="33dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:height="60dp"
                android:gravity="center"
                android:text=""
                android:textSize="10sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bein Workout"
                android:gravity="center"
                android:textSize="25sp"

                android:layout_marginTop="50dp"
                android:layout_marginBottom="0dp"
                />
            <ImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/image" />

            <Button
                android:id="@+id/btnstart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:text="Start" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brust Workout"
                android:gravity="center"
                android:textSize="25sp"

                android:layout_marginTop="50dp"
                android:layout_marginBottom="0dp"
                />

            <ImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/brust" />

            <Button
                android:id="@+id/btnstart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="20dp"
                android:text="Start" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RÃ¼cken Workout"
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="0dp"
                />
            <ImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:src="@drawable/reucken6"/>

            <Button
                android:id="@+id/btnstart3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="60dp"
                android:layout_marginBottom="60dp"
                android:text="Start" />



        </LinearLayout>

    </ScrollView>
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        tools:ignore="MissingConstraints">

    </FrameLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu" />




</androidx.constraintlayout.widget.ConstraintLayout>